{
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "mocha": true,
    "es6": true
  },
  "extends": ["airbnb-base", "prettier"],
  "rules": {
    "semi": [2, "never"],
    "no-unexpected-multiline": 2,
    "max-len": [
      1,
      {
        "code": 120,
        "comments": 200
      }
    ],
    "no-underscore-dangle": 0,
    "import/prefer-default-export": 0
  },
  "globals": {
    "client": true
  }
}
